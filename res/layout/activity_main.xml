<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.huzi.MainActivity" >

    <RadioGroup
        android:id="@+id/radioGrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:contentDescription="人数"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/siRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="四人打" >
        </RadioButton>

        <RadioButton
            android:id="@+id/sanRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三人打" >
        </RadioButton>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/yuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGrop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打多大："
            android:textSize="20dp" />

        <EditText
             android:id="@+id/caiTuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.5"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/胡"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wanJia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yuan"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="玩家" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="甲" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="乙" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="丙" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="丁" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/huoNiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wanJia"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活鸟" />

        <EditText
            android:id="@+id/jiaHuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0" 
            android:inputType="numberSigned"/>

        <EditText
            android:id="@+id/yiHuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />
        

        <EditText
            android:id="@+id/binHuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/dingHuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tuoNiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/huoNiao"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拖鸟" />

        <EditText
            android:id="@+id/jiaTuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
             android:id="@+id/yiTuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/binTuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
             android:id="@+id/dingTuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/huXi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tuoNiao"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="胡息" />

        <EditText
            android:id="@+id/jiaHuXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/yiHuXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/binHuXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/dingHuXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jieGuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/huXi"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结果"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/jiaJieGuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/yiJieGuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/binJieGuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:text="0"
           android:textSize="20dp"  />

        <TextView
            android:id="@+id/dingJieGuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:text="0"
           android:textSize="20dp"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jieGuo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/jsBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="计算" />

        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清除" />

        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退出" />
    </LinearLayout>

    <TextView
        android:id="@+id/coyp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="天下之大，无奇不有，作为娄底人，胡纸牌才是你的选择，玩胡纸牌使你的生活更加丰富多彩。"
        android:textSize="25dp" />

</RelativeLayout>